{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build com WSL Bash integrado",
      "type": "shell",
      "command": "./build.sh",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "bash",
          "args": ["-c"]
        }
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "close": false
      }
    },
    {
      "label": "Run app (WSL)",
      "type": "shell",
      "command": "./build/MyOpenGLApp",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "bash",
          "args": ["-c"]
        }
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Build and Run app (WSL)",
      "type": "shell",
      "command": "echo Finished",
      "dependsOn": [
        "Build com WSL Bash integrado",
        "Run app (WSL)"
      ],
      "dependsOrder": "sequence",
      "icon": {
        "color": "terminal.ansiCyan",
        "id": "symbol-array"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "close": true
      }
    }
  ]
}
